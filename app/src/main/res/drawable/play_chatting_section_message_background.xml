<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <gradient
                android:type="radial"
                android:shape="rectangle"
                android:angle="90"
                android:startColor="#000"
                android:endColor="#25000000" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="?attr/colorOnPrimary"/>
            <corners
                android:radius="8dp"/>
        </shape>
    </item>

</layer-list>